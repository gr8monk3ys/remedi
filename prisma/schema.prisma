generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Pharmaceutical drugs or supplements
model Pharmaceutical {
  id          String   @id @default(uuid())
  fdaId       String?  // ID from the FDA database
  name        String   @unique
  description String?
  category    String
  ingredients String   // JSON string for SQLite compatibility
  benefits    String   // JSON string for SQLite compatibility
  usage       String?
  warnings    String?
  interactions String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  remedies    NaturalRemedyMapping[]

  // Indexes for performance
  @@index([name])
  @@index([category])
  @@index([fdaId])
}

// Natural remedies
model NaturalRemedy {
  id             String   @id @default(uuid())
  name           String   @unique
  description    String?
  category       String
  ingredients    String   // JSON string for SQLite compatibility
  benefits       String   // JSON string for SQLite compatibility
  imageUrl       String?
  usage          String?
  dosage         String?
  precautions    String?
  scientificInfo String?
  references     String?  // JSON string for SQLite compatibility
  relatedRemedies String? // JSON string for SQLite compatibility
  sourceUrl      String?  // URL of the source information
  evidenceLevel  String?  // Level of scientific evidence: Strong, Moderate, Limited, Traditional
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  pharmaceuticals NaturalRemedyMapping[]

  // Indexes for performance
  @@index([name])
  @@index([category])
  @@index([evidenceLevel])
}

// Many-to-many relationship between pharmaceuticals and natural remedies
model NaturalRemedyMapping {
  id               String         @id @default(uuid())
  pharmaceutical   Pharmaceutical @relation(fields: [pharmaceuticalId], references: [id])
  pharmaceuticalId String
  naturalRemedy    NaturalRemedy  @relation(fields: [naturalRemedyId], references: [id])
  naturalRemedyId  String
  similarityScore  Float          // Similarity score between the pharmaceutical and remedy (0-1)
  matchingNutrients String        // JSON string for SQLite compatibility
  replacementType  String?        // Type of replacement: Alternative, Complementary, Supportive
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  @@unique([pharmaceuticalId, naturalRemedyId])
  // Indexes for performance
  @@index([pharmaceuticalId])
  @@index([naturalRemedyId])
  @@index([similarityScore])
}

// Search history tracking
model SearchHistory {
  id          String   @id @default(uuid())
  query       String   // The search query
  resultsCount Int     @default(0) // Number of results found
  sessionId   String?  // Optional session identifier for anonymous users
  userId      String?  // Future: user ID when authentication is added
  createdAt   DateTime @default(now())

  // Indexes for performance
  @@index([query])
  @@index([sessionId])
  @@index([userId])
  @@index([createdAt])
}

// User favorites (currently sessionId-based, will use userId when auth is added)
model Favorite {
  id            String   @id @default(uuid())
  remedyId      String   // ID of the natural remedy
  remedyName    String   // Cached name for quick display
  sessionId     String?  // Session identifier for anonymous users
  userId        String?  // Future: user ID when authentication is added
  notes         String?  // User's personal notes about the remedy
  collectionName String? // Optional collection/folder name
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Indexes for performance
  @@index([remedyId])
  @@index([sessionId])
  @@index([userId])
  @@index([collectionName])
  @@unique([sessionId, remedyId]) // Prevent duplicate favorites per session
}

// Filter preferences (persisted filter state)
model FilterPreference {
  id             String   @id @default(uuid())
  sessionId      String?  // Session identifier for anonymous users
  userId         String?  // Future: user ID when authentication is added
  categories     String?  // JSON array of selected categories
  nutrients      String?  // JSON array of selected nutrients
  evidenceLevels String?  // JSON array of selected evidence levels
  sortBy         String?  // Sort preference: similarity, name, category
  sortOrder      String?  // Sort order: asc, desc
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Indexes for performance
  @@index([sessionId])
  @@index([userId])
  @@unique([sessionId]) // One preference set per session
}

// ============================================================================
// NextAuth.js Models (Authentication & User Management)
// ============================================================================

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("user") // user, moderator, admin
  bio           String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  reviews       RemedyReview[]
  contributions RemedyContribution[]
  subscription  Subscription?

  @@index([email])
  @@index([role])
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@index([userId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// ============================================================================
// User-Generated Content Models
// ============================================================================

// User reviews and ratings for remedies
model RemedyReview {
  id          String   @id @default(uuid())
  remedyId    String   // ID of the natural remedy being reviewed
  remedyName  String   // Cached remedy name for display
  userId      String
  rating      Int      // 1-5 stars
  title       String?
  comment     String
  helpful     Int      @default(0) // Helpful vote count
  verified    Boolean  @default(false) // Verified purchase/usage
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([remedyId])
  @@index([userId])
  @@index([rating])
  @@index([createdAt])
}

// User-contributed remedies (pending moderation)
model RemedyContribution {
  id             String   @id @default(uuid())
  userId         String
  name           String
  description    String
  category       String
  ingredients    String   // JSON string
  benefits       String   // JSON string
  usage          String?
  dosage         String?
  precautions    String?
  scientificInfo String?
  references     String?  // JSON string
  imageUrl       String?
  status         String   @default("pending") // pending, approved, rejected
  moderatorNote  String?
  moderatedBy    String?
  moderatedAt    DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

// ============================================================================
// Admin & Analytics Models
// ============================================================================

// User event tracking for analytics
model UserEvent {
  id        String   @id @default(uuid())
  userId    String?  // Null for anonymous users
  sessionId String?  // Session ID for anonymous users
  eventType String   // search, view_remedy, add_favorite, remove_favorite, etc.
  eventData String?  // JSON string with event-specific data
  page      String?  // Page where event occurred
  referrer  String?  // Referrer URL if applicable
  userAgent String?  // Browser/device info
  ipHash    String?  // Hashed IP for privacy-preserving analytics
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([sessionId])
  @@index([eventType])
  @@index([createdAt])
  @@index([page])
}

// User subscription management
model Subscription {
  id        String    @id @default(uuid())
  userId    String    @unique
  plan      String    @default("free") // free, basic, premium, enterprise
  status    String    @default("active") // active, cancelled, expired, suspended
  interval  String?   // monthly, yearly
  priceId   String?   // Stripe price ID or similar
  customerId String?  // Stripe customer ID or similar
  startedAt DateTime  @default(now())
  expiresAt DateTime?
  cancelledAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([plan])
  @@index([expiresAt])
}
