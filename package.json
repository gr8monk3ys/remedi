{
  "name": "remedi",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.8",
  "scripts": {
    "dev": "next dev",
    "build": "bunx prisma generate && bunx prisma migrate resolve --rolled-back 20250207_clerk_migration 2>/dev/null; bunx prisma migrate deploy && next build",
    "start": "next start",
    "format:check": "prettier --check \"{app,components,context,hooks,lib,scripts,__tests__,e2e,prisma}/**/*.{ts,tsx,js,jsx,json,css,md}\" \"*.{ts,tsx,js,jsx,json,css,md,mjs,yml,yaml}\"",
    "format:write": "prettier --write \"{app,components,context,hooks,lib,scripts,__tests__,e2e,prisma}/**/*.{ts,tsx,js,jsx,json,css,md}\" \"*.{ts,tsx,js,jsx,json,css,md,mjs,yml,yaml}\"",
    "lint": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "analyze": "ANALYZE=true next build",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "import:fda": "bun run scripts/import-openfda-data.ts",
    "import:fda:dry": "bun run scripts/import-openfda-data.ts --dry-run",
    "import:fda:quick": "bun run scripts/import-openfda-data.ts --limit 50",
    "type-check": "DATABASE_URL=${DATABASE_URL:-postgresql://remedi:remedi_dev@localhost:5433/remedi?schema=public} bunx prisma generate && tsc --noEmit",
    "init": "bunx prisma generate && bunx prisma migrate dev && bunx prisma db seed",
    "db:verify": "bun run scripts/verify-db.ts",
    "db:integrity": "bun run scripts/check-data-integrity.ts",
    "db:baseline": "bunx prisma migrate resolve --applied 20260205094500_baseline_postgres",
    "health:check": "bun run scripts/health-check.ts",
    "health:check:http": "bun run scripts/health-check-http.ts",
    "prod:check": "bun run scripts/production-check.ts",
    "predeploy": "bun run format:check && bun run lint && bun run type-check && bun run test:run && bun run db:verify && bun run db:integrity && bun run prod:check",
    "quality:check": "bun run format:check && bun run lint && bun run type-check && bun run test:run && bun run test:e2e && bun run db:verify && bun run db:integrity && bun run prod:check",
    "prepare": "husky"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.37.3",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-email/components": "^1.0.6",
    "@sentry/nextjs": "^10.38.0",
    "@upstash/ratelimit": "^2.0.8",
    "@upstash/redis": "^1.36.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.31.0",
    "lucide-react": "^0.563.0",
    "next": "^16.1.6",
    "next-themes": "^0.4.6",
    "openai": "^6.17.0",
    "pg": "^8.16.3",
    "prisma": "^7.3.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "resend": "^6.9.1",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "stripe": "^20.3.0",
    "svix": "^1.84.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.1.6",
    "@next/eslint-plugin-next": "^16.1.6",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.17",
    "eslint": "^9.22.0",
    "eslint-config-next": "^16.1.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.56.1",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.0.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "vitest related --run"
    ],
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "trustedDependencies": [
    "@prisma/client",
    "@prisma/engines",
    "@sentry/cli",
    "esbuild",
    "prisma",
    "sharp",
    "unrs-resolver"
  ]
}
