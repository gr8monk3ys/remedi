{
  "name": "remedi",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.8",
  "scripts": {
    "dev": "next dev",
    "build": "bunx prisma generate && next build --webpack",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "import:fda": "bunx ts-node scripts/import-openfda-data.ts",
    "import:fda:dry": "bunx ts-node scripts/import-openfda-data.ts --dry-run",
    "import:fda:quick": "bunx ts-node scripts/import-openfda-data.ts --limit 50",
    "type-check": "tsc --noEmit",
    "init": "bunx prisma generate && bunx prisma migrate dev && bunx prisma db seed",
    "db:verify": "bun run scripts/verify-db.ts",
    "db:integrity": "bun run scripts/check-data-integrity.ts",
    "db:baseline": "bunx prisma migrate resolve --applied 20260205094500_baseline_postgres",
    "health:check": "bun run scripts/health-check.ts",
    "health:check:http": "bun run scripts/health-check-http.ts",
    "prod:check": "bun run scripts/production-check.ts",
    "predeploy": "bun run lint && bun run type-check && bun run test:run && bun run db:verify && bun run db:integrity && bun run prod:check",
    "prepare": "husky"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@react-email/components": "^1.0.6",
    "@sentry/nextjs": "^10.38.0",
    "@upstash/ratelimit": "^2.0.8",
    "@upstash/redis": "^1.36.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.31.0",
    "lucide-react": "^0.563.0",
    "next": "^16.1.6",
    "next-auth": "^5.0.0-beta.29",
    "next-themes": "^0.4.6",
    "openai": "^6.17.0",
    "pg": "^8.16.3",
    "prisma": "^7.3.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "resend": "^6.9.1",
    "server-only": "^0.0.1",
    "stripe": "^20.3.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.1.6",
    "@next/eslint-plugin-next": "^16.1.6",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.17",
    "eslint": "^9.22.0",
    "eslint-config-next": "^16.1.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.56.1",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.0.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "vitest related --run"
    ],
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "trustedDependencies": [
    "@prisma/client",
    "@prisma/engines",
    "@sentry/cli",
    "esbuild",
    "prisma",
    "sharp",
    "unrs-resolver"
  ]
}
